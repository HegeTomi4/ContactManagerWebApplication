@page
@model LoginModel
<body class="row1">
<div class="">
    <div class="rcorners1">
        <section>
            <form id="account" method="post">                
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-floating">
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
                    <label asp-for="Input.Email" class="form-label"></label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-floating">
                    <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" />
                    <label asp-for="Input.Password" class="form-label">Jelszó</label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div>
                    <div class="checkbox">
                        <label asp-for="Input.RememberMe" class="form-label" style="color:white">
                            <input class="form-check-input" asp-for="Input.RememberMe" />
                            Emlékezzen rám
                        </label>
                    </div>
                </div>
                <div style="display:flex;justify-content:center">
                    <button id="login-submit" type="submit"  class="btn center nav-link">Bejelentkezés</button>
                </div>
                <div>
                    <p>
                            <a style="color:white" asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Regisztráció</a>
                    </p>
                </div>
            </form>
        </section>
    </div>
</div>
</body>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
